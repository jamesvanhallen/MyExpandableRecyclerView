<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/pink</item>
        <item name="android:colorEdgeEffect">@color/pink</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="android:colorControlActivated">@color/pink</item>
        <item name="android:colorControlHighlight">@color/pink_dark</item>
        <item name="android:colorControlNormal">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">#0F0F0F</item>
    </style>


    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>

    </style>


    <style name="CustomTabPageIndicator" parent="">
        <item name="android:textColor">#FF000000</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:background">@color/pink</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="FAB">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>

    </style>


</resources>
